//.vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-Werror",
                "-std=c99",
                "-I",
                "${workspaceFolder}/src",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/cli/*.c",
                "-lm",
                "-ldl",
                "-Wl,--export-dynamic"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
